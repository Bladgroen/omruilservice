{% extends 'layout/app.twig' %}
{% block pageContent %}
    <div id="content">
        <div class="inner">

            <!-- Post -->
            <article class="box post post-excerpt">
                <header>
                    <!--
                        Note: Titles and subtitles will wrap automatically when necessary, so don't worry
                        if they get too long. You can also remove the <p> entirely if you don't
                        need a subtitle.
                    -->


                    <!-- Post -->

                    <article class="box post post-excerpt">
                        <article class="box post post-excerpt">
                            {% for post in ticket %}
                                <form></form>
                                <header>
                                    <!--
                                        Note: Titles and subtitles will wrap automatically when necessary, so don't worry
                                        if they get too long. You can also remove the <p> entirely if you don't
                                        need a subtitle.
                                    -->
                                    <h2>{{ post.ticketName }}</h2>
                                    {% for usr in user %}
                                        <p>{{ usr.sellerName }}</p>
                                        <p>{{ usr.sellerMail }}</p>
                                    {% endfor %}
                                </header>

                                <p>{{post.ticketPrice}} EURO</p>
                                <p>{{post.reason}}</p>
                                <a href="/{{ post.ticketID }}/sell"><input type="submit" name="verkoop" value="Kopen"></a>
                            {% endfor %}

                        </article>


                    </article>


                    <!-- Pagination -->
                    <div class="pagination">
                        <!--<a href="#" class="button previous">Previous Page</a>-->
                        <div class="pages">

                        </div>

                    </div>

        </div>
    </div>
{% endblock %}