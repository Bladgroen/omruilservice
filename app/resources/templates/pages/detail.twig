{% extends 'layout/app.twig' %}
{% block pageContent %}
    <div id="content">
        <div class="inner">

            <!-- Post -->
            <article class="box post post-excerpt">
                <header>
                    <!--
                        Note: Titles and subtitles will wrap automatically when necessary, so don't worry
                        if they get too long. You can also remove the <p> entirely if you don't
                        need a subtitle.
                    -->


                    <!-- Post -->
                    {% for post in info %}
                        <article class="box post post-excerpt">
                            <article class="box post post-excerpt">
                                <form></form>
                                <header>
                                    <!--
                                        Note: Titles and subtitles will wrap automatically when necessary, so don't worry
                                        if they get too long. You can also remove the <p> entirely if you don't
                                        need a subtitle.
                                    -->
                                    <h2><a href="#">{{ post.eventName }}</a></h2>

                                </header>

                                <a href="#" class="image featured"><img
                                            src="images/image{{ post.eventID }}.jpg" alt=""/></a>
                                <p>
                                    {{ post.description }}
                                </p>

                            </article>

                            <div id="flex">
                                <ul>
                                    <h3>Dagtickets</h3>
                                    {% for dag in dagticket %}
                                        <li><a href="/event/{{ post.eventID }}/ticket/{{ dag.ticketID }}">{{ dag.ticketName }}
                                                | {{ dag.ticketPrice }} euro</a></li>
                                    {% endfor %}
                                </ul>
                                <ul>
                                    <h3>Combitickets</h3>
                                    {% for combi in combitickets %}
                                        <li>
                                            <a href="/{{ combi.ticketID }}">{{ combi.ticketName }}
                                                | {{ combi.ticketPrice }} euro </a></li>
                                    {% endfor %}
                                </ul>
                                <ul>
                                    <h3>Campingtickets</h3>
                                    {% for camping in campingtickets %}
                                        <li>
                                            <a href="/detailTicket.php?ticket={{ camping.ticketID }}">{{ camping.ticketName }}
                                                | {{ camping.ticketPrice }} euro</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>

                        </article>
                    {% endfor %}

                    <!-- Pagination -->
                    <div class="pagination">
                        <!--<a href="#" class="button previous">Previous Page</a>-->
                        <div class="pages">

                        </div>

                    </div>

        </div>
    </div>
{% endblock %}